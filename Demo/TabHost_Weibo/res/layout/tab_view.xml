<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tabsLayout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical" >

    <!--
		android:layout_marginLeft="0.01dp" android:layout_marginRight="0.01dp"
		android:background="#8C8A8C"
    -->

    <LinearLayout
        android:id="@+id/tabsLayout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/tabselector"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/main_activity_tab_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/tab_bg"
            android:scaleType="center" />

        <TextView
            android:id="@+id/main_activity_tab_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Title"
            android:textColor="#FFFFFF"
            android:textSize="15sp" />
    </LinearLayout>

</LinearLayout>