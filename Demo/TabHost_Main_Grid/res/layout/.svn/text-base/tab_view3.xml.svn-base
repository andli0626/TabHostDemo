<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:gravity="center" android:orientation="horizontal" android:id="@+id/tabsLayout"
	android:layout_width="50dp" android:layout_height="wrap_content">
	<!--水平排列 -->
	<LinearLayout android:background="@drawable/tabselector"
		android:orientation="horizontal" android:gravity="center" android:id="@+id/tabsLayout"
		android:layout_width="fill_parent" android:layout_height="fill_parent">
		<ImageView android:layout_gravity="left"
			android:id="@+id/main_activity_tab_image" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:scaleType="fitXY" />
		<TextView android:textSize="25sp" android:id="@+id/main_activity_tab_text"
			android:textColor="#FFFFFF" android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:text="Title" />
	</LinearLayout>
</LinearLayout>